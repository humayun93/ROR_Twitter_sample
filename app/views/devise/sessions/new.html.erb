<div class="row">
<div class="span4">
</div>
<div class="span4">
<div class="well well-large">

<h1 align="center">Sign in <i class="icon-user"> </i></h1>  


<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  
  <%= f.email_field :email, autofocus: true, class:"block stable_hieght" ,placeholder: "Email"  %>

 
    <%= f.password_field :password, autocomplete: "off",class:"block stable_hieght" ,placeholder: "Password"  %>

  

  <%= f.submit "Sign in",class: "stable_hieght btn btn-success btn-block "  %>
  <br/>
  <% if devise_mapping.rememberable? -%>
    <%= f.check_box :remember_me %> Remember me 
  <% end -%>
<% end %>

<%= render "devise/shared/links" %>
</div>

</div>
<div class="span4">

</div>
</div>

